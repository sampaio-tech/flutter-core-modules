# Git configuration for commits, branches, and push operations
git:
  user:
    name: "Your Name"  # Replace with your actual name
    email: "your.email@example.com"  # Replace with your actual email
  branch:
    prefix: "ralph/"  # Optional: prefix for branch names (e.g., "ralph/feature-name")
    auto_create: true  # Automatically create branches if they don't exist
  commit:
    message_format: "conventional"  # Options: "conventional", "simple", "custom"
    # Custom format example (if message_format is "custom"):
    # template: "{type}: {description}"
  push:
    auto_push: false  # Set to true to automatically push after commits
    remote: "origin"  # Default remote name
    upstream: true  # Set upstream branch when pushing

# Create PROMPT.md with your task, then run: ralph run
